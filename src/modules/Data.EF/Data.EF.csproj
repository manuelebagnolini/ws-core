<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <PackageVersion>1.1.2</PackageVersion>
    <PackageId>Ws.Core.Extensions.Data.EF</PackageId>
    <AssemblyName>Ws.Core.Extensions.Data.EF</AssemblyName>
    <RootNamespace>Ws.Core.Extensions.Data.EF</RootNamespace>
    <Authors>Massimo Di Paolo</Authors>
    <Copyright>© Massimo Di Paolo. All rights reserved.</Copyright>
    <Description>DbContext and IRepository interface for EF-based extensions</Description>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageReleaseNotes>JsonConvert: map Type/Interface with text columun, map/unmap property with text columun, serializing/deserializing value;</PackageReleaseNotes>
    <PackageTags>EF data mapper</PackageTags> 
  </PropertyGroup>

  <PropertyGroup>
    <NoWarn>1701;1702;1705;1591</NoWarn>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Data\Data.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore.Relational" Version="2.2.6" />
  </ItemGroup>
</Project>
